<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:layout_scrollFlags="snapMargins"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    android:padding="16dp"
    android:layout_height="match_parent">

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/apphousebd_logo"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
        android:src="@drawable/mail"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textView10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:gravity="center"
		android:padding="16dp"
		android:text="@string/apphousebd"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/apphousebd_logo" />

	<LinearLayout
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_width="match_parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView10"
		android:layout_height="wrap_content">

	<ImageView
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_margin="4dp"
		android:layout_marginStart="8dp"
		android:contentDescription="@string/facebook"
		android:adjustViewBounds="true"
		android:id="@+id/apphousebd_facebook"
		android:scaleType="fitXY"
		android:src="@drawable/facebook" />

	<ImageView
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_margin="4dp"
		android:layout_marginStart="8dp"
        android:id="@+id/apphousebd_instagram"
		android:adjustViewBounds="true"
		android:scaleType="fitXY"
        android:contentDescription="@string/instagram"
		android:src="@drawable/instagram"/>

	<ImageView
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginStart="8dp"
		android:adjustViewBounds="true"
        android:id="@+id/apphousebd_linkedin"
		android:scaleType="fitXY"
        android:contentDescription="@string/linkedin"
		android:layout_margin="4dp"
		android:src="@drawable/linkedin"/>

	<ImageView
        android:contentDescription="@string/website"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginStart="8dp"
		android:adjustViewBounds="true"
        android:id="@+id/apphousebd_website"
		android:layout_margin="4dp"
		android:scaleType="fitXY"
		android:src="@drawable/domain"/>

	<ImageView
        android:contentDescription="@string/email"
		android:layout_width="32dp"
		android:layout_height="32dp"
        android:id="@+id/apphousebd_mail"
		android:layout_marginStart="8dp"
		android:adjustViewBounds="true"
		android:layout_margin="4dp"
		android:scaleType="fitXY"
		android:src="@drawable/mail"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>